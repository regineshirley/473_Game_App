
{{#unless hideNav}}
<header>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed"
          data-toggle="collapse" data-target="#top-navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        {{#link-to 'index'}}<a class="navbar-brand">Trivia</a>{{/link-to}}
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="top-navbar-collapse">
        <ul class="nav navbar-nav">
          <li>
            {{#link-to 'room'}}(Master) Room{{/link-to}}
          </li>
          <li>
            {{#link-to 'players'}}Players{{/link-to}}
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dev Menu <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li class="dropdown-header">Data</li>
              <li>
                {{#link-to 'cards'}}Cards{{/link-to}}
              </li>
              <li role="separator" class="divider"></li>
              <li class="dropdown-header">Unused Routes</li>
              <li>
                {{#link-to 'players.new'}}New player{{/link-to}}
              </li>
              <li>
                {{#link-to 'rooms'}}Rooms{{/link-to}}
              </li>
            </ul>
          </li>
          {{#if session.isAuthenticated}}
            <p class="navbar-text">Logged in as {{session.currentUser.displayName}}</p>
            <button class="btn btn-default navbar-btn" {{action "signOut"}}>Sign out</button>
          {{else}}
            <button class="btn btn-default navbar-btn" {{action "signIn" "github"}}>Sign in with {{fa-icon "github"}} GitHub</button>
          {{/if}}
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>
</header>
{{/unless}}
<div class="container">
  {{outlet}}
</div>
