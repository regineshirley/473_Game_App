<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

    <div class="panel-heading">
      <h3>Welcome</h3>
    </div>

    <div class="panel-body">
      <form>
        {{#if session.isAuthenticated}}
          <button class="btn btn-danger" {{action 'logout'}}>Log Out</button>

        {{else}}
          <div class="form-group">
            <label>Email</label> {{input type="email" class="form-control" value=email placeholder="me@example.com" required=true}}
          </div>
          <div class="form-group">
            <label>Password</label> {{input type="password" class="form-control" value=password placeholder="Password" required=true}}
          </div>
          <button {{action 'login'}} class="btn btn-success">Log In</button>

          <button {{action 'github'}} class="btn btn-primary">Login with Github</button>
          <!--  <button class="btn btn-danger" {{action 'logout'}}>Log Out</button> -->
        {{/if}}
      </form>
    </div>
  </div>
</div>
